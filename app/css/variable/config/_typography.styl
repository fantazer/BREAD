//font(name,file,size)
font('Nunito','Nunito-Regular',400)
font('Nunito','Nunito-Bold',700)

$v-font =  'Nunito', sans-serif


typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

/*
font-size 14px
@extend .type--sm

font-size 20px
@extend .type--main

font-size 24px
@extend .type--md

font-size 30px
@extend .type--lg

font-size 40px
@extend .type--xl
*/

.type--xs
	typeSize(12,10)

.type--sm
	typeSize(12,12)

.type--main
	typeSize(15,14)

.type--md
	typeSize(18,18)

.type--lg
	typeSize(24,24)

.type--xl
	typeSize(36,30)

.type--xxl
	typeSize(48,36)

.type--bold
	font-weight bold

.type--gray
	color $gray

.type--red
	color $red


h1
	@extend .type--xxl
h2
	@extend .type--xl
h3
	@extend .type--lg
h4
	@extend .type--md
h5
	@extend .type--main

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main
	line-height: 1.6
.link--mark
	color $brown
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none

.type--mark
	color $mark

.text
	@extend .type--md
	a
		color $brown
	p
		line-height: 1.6
		margin-bottom: 30px
		@extend .type--md
	ul
		margin-bottom: 30px
		li
			@extend .type--md
			line-height: 1.6
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0

.text--extend
	+below(768px)
		padding-left: 0
	padding-left: 80px

