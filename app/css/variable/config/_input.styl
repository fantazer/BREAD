// === Inputs ===
.input,.textarea,.select
	padding 20px 30px
	border 1px solid $border-color
	resize: none
	outline: 0 !important
	border-radius 20px
	font-family $v-font
	display block!important
	placeholder($gray)
	background: white
	tr(all)
	&:focus
		background: white
		border-color $mark

.input--disable
	@extend .disabled
	background: $border-color

.style-label
	display flex
	position relative
	align-items center

.style-label--disable
	@extend .disabled

.check-el
	input
		position absolute
		top 0
		left -9999px
	.style-input-element
		br(5px)
		cp()
		tr(all)
		size 26px
		position relative
		display inline-block
		margin-right 10px
		background white
		border 1px solid $border-color
		&:hover
			border 1px solid $mark
	.icon-check
		display none
	.style-input
		&:checked ~ .style-input-element
			flex(mid)
			color white
			background: $mark
			border 1px solid $mark
			.icon-check
				display block
				fill black
				size 14px

.style-label--radio
	input
		position absolute
		top 0
		left -9999px
	.style-input-element
		size 26px
		position relative
		display inline-block
		margin-right 10px
		background white
		border 2px solid $border-color
		round()
		cp()
		&:hover
			border 2px solid $mark
	.icon-check
		display none
	.style-input
		&:checked ~ .style-input-element
			flex(mid)
			color white
			border 2px solid $mark
			background: white
			.icon-radio
				round()
				size 14px
				background $mark

.style-input-text
	color black
	width: calc(100% - 35px)
	line-height: 1.6
	font-size: 12px
	a
		color $mark

//form
.input-row
	margin-bottom: 25px
	.input
		width: 100%
.input-row--middle
	f()
	align-items center
.input-row__title
	margin-bottom: 10px

.input-row--error
	.input
		border-color $red
		color $red
	.error-msg
		display block
.error-msg
	color $red
	margin: 10px 0
	display none

.input-cont
	+below(640px)
		grid-row-gap 0
	display: grid
	grid-gap 20px
	.style-label
		width: 100%
.input-cont--two
	grid-template-columns: 1fr 1fr
	+below(640px)
		grid-template-columns: 1fr
.input-cont--three
	grid-template-columns: 1fr 1fr 1fr
	+below(640px)
		grid-template-columns: 1fr

.input-cont--four
	grid-template-columns: 1fr 1fr 1fr 1fr
	+below(768px)
		grid-template-columns: 1fr 1fr

//checkbox remember
.login-remember
	.style-label
		align-items: flex-start
	.style-input-text
		font-size: 12px
		color black
		width: calc(100% - 50px)
		line-height: 1.6
		margin-top: 3px
		a
			color $brown
			border-bottom 1px dashed brown
	margin-bottom: 20px

.input-get
	f()
	align-items stretch
	.input
		border-radius 20px 0 0 20px
.input-get__btn
	position relative
	background: $mark
	border-radius 0 20px 20px 0
	border 0
	flex(mid)
	padding: 20px
	cp()
	tr()
	&:hover
		background: lighten($mark,10)
	.icon
		position absolute
		size 14px
		fill white
		top 50%
		left 50%
		margin-left: -7px
		margin-top: -7px

//upload
.upload-wrap
	flex(mid)
	fw()
	margin-bottom: 20px
.upload
	f()
	cp()
	br(10px)
	align-items: flex-start
	justify-content: center
	border 1px solid $border-color
	box-shadow 0px 3px 14px white
	tr(all)
	margin-bottom: 10px
	&:hover
		bsh()
.upload__icon
	padding: 10px
	border-right 1px solid $border-color
	height: 50px
	flex(mid)
	.icon
		size 25px
		fill $red
.upload__text
	height: 50px
	margin-left: -1px
	padding: 15px
	width: auto
	flex(mid)
.upload-img
	flex(mid)
.upload-img__el
	size 50px
	br(10px)
	border 1px solid $border-color
	margin-right: 10px
	margin-bottom: 10px
	background-size: cover
	background-repeat: no-repeat
	position: relative
	overflow: hidden
	cp()
	&:hover
		&:before
			content 'X'
			opacity:1

	&:before
		content 'X'
		position: absolute
		background: #000000b3
		width: 100%
		height: 100%
		left 0
		top 0
		flex(mid)
		color white
		opacity:0
		tr(all)
.upload-btn
	position: absolute
	left -9999px


//form

.icon--sm
	size 20px
	display inline-block
	margin-right: 10px

.icon--gray
	fill $gray