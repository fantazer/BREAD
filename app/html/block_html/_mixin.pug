mixin icon(name,cls)
  svg(class=cls)
    use(xlink:href="#" + name)

mixin checkbox(text,disable)
  .check-el
    if disable
      label.style-label.style-label--checkbox.style-label--disable
        input(type="checkbox").style-input
        .style-input-element
          +icon("checked","icon-check")
        .style-input-text=text
    else
      label.style-label.style-label--checkbox
        input(type="checkbox").style-input
        .style-input-element
          +icon("checked","icon-check")
        .style-input-text=text
mixin radio(text,group,checked)
  .check-el
    label.style-label.style-label--radio
      input(type="radio" name=group checked=checked).style-input
      .style-input-element
        .icon-radio
      .style-input-text=text

mixin incr(a,type)
  - a = a || 1
  .elements-icr-block
    .incr(class=type?type:'')
      .incr__minus.incr__nav
        +icon("minus","icon")
      .incr__val
        span=a
        .incr__val-coner
      .incr__plus.incr__nav
        +icon("plus","icon")

mixin product()
  .product-el
    .product-el--add
      +icon("cart-empty","icon")
      .product-el--add-val 2
    .product__img
      .product__img-el(style="background-image:url('img/item-edit-3.jpg')")
    .product__cont
      .product__title Хлеб беларусское чудо
      .product-box
        .product__text Свежеиспечённый ржаной хлеб на молочной закваске с добавлением мёда
      .size
        .size__el.size__el--active 350 г
        .size__el 500 г
        .size__el 750 г
      .product-footer
        .product-price 860 р.
        .product-weight 300 гр
        .item-add
          +icon("plus","icon")
